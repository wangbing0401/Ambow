*{margin: 0;padding: 0;}
body{background: #ef4b38;font-family: "微软雅黑","Arial","Microsoft YaHei","黑体","宋体",sans-serif; }
.loginBox{
    height: 350px;
    width: 400px;
    position: absolute;
    left: 50%;
    margin-left: -200px;
    top:50%;
    margin-top: -175px;
}
.logo{
    text-align: center;
    color:#fff;
    font-size: 40px;
    font-weight: bold;
    margin-bottom: 30px;
}
.inputBox{
    height: 40px;
    width: 250px;
    margin: 0 auto;
    text-align: center;
    /*margin-bottom: 20px;*/
}
.lastp{
    width: 250px;
    margin: 0 auto;
    color: #fff;
    font-size: 14px;
}
.txtbox,.validateTxt.validateTxt{
    height:35px;
    /*width: 250px;*/
    border:#fff solid 1px;
    text-align: center;
    background-color: rgba(255, 255, 255, 0.2);
    color: #FFFFFF;
    font-size: 16px;
    border-radius: 3px;
    -webkit-transition-duration: 0.25s;
    transition-duration: 0.25s;
}
.txtbox{
    width: 250px;
}
.validateTxt{
    width: 120px;
    float: left;
    margin-right: 10px;
}
.txtbox:hover{
    background-color: rgba(255,255,255,0.4);
}
.txtbox:focus,.validateTxt:focus{
    background: #fff;
    color:#ef4b38;
}
.code{
    display: block;
    float: right;
    height:37px;
    line-height: 37px;
    width: 110px;
}
.kaptchaImage{
    height:37px;
    width: 110px;
    cursor:pointer;
}
.tip{
    height: 20px;
    line-height: 20px;
    font-size: 12px;
    width: 250px;
    margin: 0 auto 5px;
    color: #fff;
}
.loginBtn{
    height: 35px;
    width: 150px;
    background: #fff;
    color: #ef4b38;
    border:none;
    border-radius: 3px;
    cursor: pointer;
    float: right;
}
.checkbox{
    height: 20px;
    width: 20px;
    float: left;
}
input::-webkit-input-placeholder {　color:#fff;}
input:-moz-placeholder {　color:#fff;}
input::-moz-placeholder { color:#fff;}
input:-ms-input-placeholder { color:#fff;}