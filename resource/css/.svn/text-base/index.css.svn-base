.ambow_nav{
    position: fixed;
    width: 100%;
    height: 100px;
}
.ambow_nav .line1{
    width: 100%;
    height: 40px;
    background-color: black;
}
.ambow_nav .line2{
    width: 100%;
    height: 60px;
    background-color: #F5F6F7;
    padding-left: 250px;
}
.ambow_nav span{
    display: inline-block;
    width: 100px;
    height: 60px;
    line-height: 60px;
    text-align: center;
}
.left{
    position: absolute;
    width: 250px;
    border-right: 1px solid #F6F7F8;
    background-color: white;
    top: 0px;
    bottom: 0px;
}
.left .left_top{
    position: relative;
    width: 260px;
    height: 100px; line-height: 100px;
    text-align: center;
    font-size: 18px;
    color: white;
    background-color: #E84D44;
}
.left .left_top:after{
    position: absolute;
    right: 0;
    bottom: -10px;
    display: inline-block;
    border: 5px solid #78130F;
    border-right-color: transparent;
    border-bottom-color: transparent;
    content: "";
}